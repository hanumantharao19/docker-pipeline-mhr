pipeline {
    agent any
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')

       }
    tools {
        maven  'maven'
    }
    stages {
        stage ('git checkout'){
            steps {
                cleanWs()
                checkout scm
                
            }
        }
        stage ('maven build'){
            steps {
                sh 'mvn clean install'
            }
        }
    }
    post {
       
        success {
            echo 'build got success'
        }
        failure {
            echo "build got faild so pelase check the cosole output for debug the logs"
        }
      }
}
